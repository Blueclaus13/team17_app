@model MindfulMomentsApp.Models.Entry

@{
    ViewData["Title"] = "Delete Entry";
}

<h1>Delete Entry</h1>

<h3>Are you sure you want to delete this entry?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToLocalTime()</dd>

        <dt class="col-sm-2">Mood</dt>
        <dd class="col-sm-10">@Model.Mood</dd>

        <dt class="col-sm-2">Activity</dt>
        <dd class="col-sm-10">@Model.Activity</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EntryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
