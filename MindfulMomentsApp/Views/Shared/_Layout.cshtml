<!DOCTYPE html>
<html lang="en">

<head>
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" render-mode="ServerPrerendered" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindfulMomentsApp</title>

    <script type="importmap"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link rel="preload" href="https://ka-f.fontawesome.com/releases/v6.0.0/webfonts/free-fa-solid-900.woff2" as="font" type="font/woff2" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Jersey+10&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MindfulMomentsApp.styles.css" asp-append-version="true"/>

    <style>
        @@font-face {
            font-family: 'Font Awesome 6 Free';
            font-style: normal;
            font-weight: 900;
            font-display: swap; 
            src: url('https://ka-f.fontawesome.com/releases/v6.0.0/webfonts/free-fa-solid-900.woff2') format('woff2');
        }

        .font-bebas {font-family: 'Bebas Neue', sans-serif;}
    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-dark d-md-none p-3 font-bebas nav-color">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold font-bebas" asp-controller="Home" asp-action="Index">MindfulMoments<span class="fw-light opacity-75 fs-6"> @ViewData["Title"]</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileMenu" aria-controls="mobileMenu" aria-expanded="false" aria-label="Toggle Navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mobileMenu" role="navigation">
                    <ul class="nav flex-column mt-3">
                        <li class="nav-item mb-2">
                            <a class="nav-link text-light font-bebas" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house me-2"></i> Home</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item mb-2">
                                    <a class="nav-link text-light font-bebas" href="/Journal"><i class="fa-solid fa-book me-2"></i>
                                    Journal</a>
                                </li>
                                <li class="nav-item mb-2"><a class="nav-link text-light font-bebas" asp-controller="Account"
                                    asp-action="Index"><i class="fa-solid fa-user me-3"></i> Account</a>
                                </li>
                                <li class="nav-item mb-2"><a class="nav-link text-light font-bebas" asp-controller="Account"
                                    asp-action="Logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item mb-2"><a class="nav-link text-light font-bebas" asp-controller="Account"
                                    asp-action="SignIn"><i class="fa-solid fa-user me-2"></i> Sign In</a>
                                </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="d-flex" id="wrapper">
            <div class="text-light d-none d-md-block sidebar-wrapper font-bebas nav-color" role="navigation" aria-label="Main Sidebar">
                <div class="p-4">
                    <a class="navbar-brand text-light fs-4 fw-bold mb-4 d-block font-bebas" asp-controller="Home"
                        asp-action="Index">MindfulMoments
                    </a>
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item mb-3">
                                <a class="nav-link text-light d-flex align-items-center p-1 fs-5 font-bebas" asp-controller="Home"
                                    asp-action="Index">
                                    <i class="fa-solid fa-house me-3"></i> Home
                                </a>
                            </li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item mb-3">
                                    <a class="nav-link text-light d-flex align-items-center p-1 fs-5 font-bebas" href="/Journal">
                                        <i class="fa-solid fa-book me-3"></i> Journal
                                    </a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="nav-link text-light d-flex align-items-center p-1 fs-5 font-bebas" asp-controller="Account"
                                        asp-action="Index">
                                        <i class="fa-solid fa-user me-3"></i> Account
                                    </a>
                                </li>
                                <li class="nav-item mb-3">
                                    <a class="nav-link text-light d-flex align-items-center p-1 fs-5 font-bebas"
                                        asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-right-from-bracket me-3"></i> Logout
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item mb-3">
                                    <a class="nav-link text-light d-flex align-items-center p-1 fs-5"
                                        asp-controller="Account" asp-action="SignIn"><i class="fa-solid fa-user me-3"></i> Sign In
                                    </a>
                                </li>
                            }

                            <li aria-hidden="true">
                                <hr class="text-light opacity-25">
                            </li>


                            <li class="nav-item mb-2">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Support"><i
                                    class="fa-solid fa-shield-halved me-2"></i> Support
                                </a>
                            </li>
                        </ul>
                </div>
            </div>

            <div class="flex-grow-1">
                <main role="main" class="p-4">
                    @RenderBody()
                </main>
            </div>
            </div>
    </header>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2026 - MindfulMomentsApp - <a style="color: #46362A !important" asp-area="" asp-controller="Home" asp-action="Support">Support</a>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/9ecf78ba67.js" crossorigin="anonymous" defer></script>
    <script src="_framework/blazor.server.js" autostart="false" defer></script>
    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
        @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            Blazor.start();
        });
    </script>
</body>
</html>