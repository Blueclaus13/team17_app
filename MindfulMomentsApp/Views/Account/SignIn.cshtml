@{
    ViewData["Title"] = "Sign In";
}

<h2>Welcome to Mindful Moments</h2>
<p>Please sign in to start your session</p>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<form method="post" action="/Account/SignIn">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="Email" required class="form-control" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Password" required class="form-control" />
    </div>
    
    <button type="submit" class="btn">Sign In</button>
    <p class="mt-3">Don't have an account? <a style="color: #46362A !important" href="/Account/Register">Sign up</a></p>

</form>

<hr />

<a class="btn" href="/Account/GoogleLogin">Sign in with Google</a>

