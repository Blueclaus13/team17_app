@{
    ViewData["Title"] = "Sign In";
}

<h2>Welcome to Mindful Moments</h2>
<p>Please sign in to start your session</p>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<form method="post" action="/Account/SignIn">
    @Html.AntiForgeryToken()
    <input type="email" name="email" placeholder="Email" required class="form-control" /><br />
    <input type="password" name="password" placeholder="Password" required class="form-control" /><br />

    <button type="submit" class="btn">Sign In</button>
    <p>Don't have an account? <a href="/Account/Register">Sign up</a></p>

</form>

<hr />

<a class="btn" href="/Account/GoogleLogin">Sign in with Google</a>

