@model MindfulMomentsApp.Models.Entry

@{
    ViewData["Title"] = "Entry Details";
}

<h1>Entry Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToLocalTime()</dd>

        <dt class="col-sm-2">Updated</dt>
        <dd class="col-sm-10">@(Model.UpdatedDate?.ToLocalTime().ToString() ?? "-")</dd>

        <dt class="col-sm-2">Mood</dt>
        <dd class="col-sm-10">@Model.Mood</dd>

        <dt class="col-sm-2">Activity</dt>
        <dd class="col-sm-10">@Model.Activity</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Journal</dt>
        <dd class="col-sm-10">@Model.JournalId</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.EntryId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
