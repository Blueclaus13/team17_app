@{
    ViewData["Title"] = "Sign In";
}

<div class="row align-items-center">
    <div class="col-md-6">
        <h1>Welcome to Mindful Moments</h1>
        <p>Please sign in to start your session</p>

        @if (ViewBag.Error != null)
        {
            <p style="color:red">@ViewBag.Error</p>
        }

        <form method="post" action="/Account/SignIn" style="padding-left: 20px;">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Email" required class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Password" required class="form-control" />
            </div>

            <button type="submit" class="btn">Sign In</button>
    <p class="mt-3" style="margin-bottom: 30px;">Don't have an account? <a style="color: #46362A !important" href="/Account/Register">Sign up</a></p>

            </form>

            <hr />

            <a class="btn" href="/Account/GoogleLogin">Sign in with Google</a>
        </div>

        <div class="col-md-6 text-center">
            <img src="/images/yellow_lady.jpg" alt="Woman with laptop" class="img-fluid"
                 style="max-width: 90%; height: auto;" />
        </div>
    </div>

